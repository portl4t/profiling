
global vec;

probe vfs.write {

    if (bytes_to_write >= 1024) {
        filename = __file_filename(file);
        vec[pid(), filename, dev, devname] += bytes_to_write;
    }
}


probe timer.s(2)
{
    foreach ([p, f, d, dn] in vec) {
        printf("vec[%d, %s, %d, %s] = %d\n", p, f, d, dn, vec[p, f, d, dn]);
    }

    delete vec
}

